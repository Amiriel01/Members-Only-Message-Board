extends layout 

block content 

        if user
            if admin 

                h1 Welcome to the Message Board #{user.username}!

                a(href='/routers/message/create_message')
                    button(type='button') Create Message

                a(href='/users/logout')
                    button(type='button') Logout

            else if member

                h1 Welcome to the Message Board #{user.username}!

                a(href='/routers/message/create_message')
                    button(type='button') Create Message

                a(href='/users/admin_join_form')
                    button(type='button') Enter Admin Code for Admin Privleges

                a(href='/users/logout')
                    button(type='button') Logout
                    
            else 

                h1 Welcome to the Message Board #{user.username}!
                a(href='/users/member_join_form')
                    button(type='button') Enter Code to Post Messages
                a(href='/users/logout')
                    button(type='button') Logout

        else 

            h1 Welcome to the Message Board!
            a(href='/routers/message/sign-up') 
                button(type='button') Sign-Up

            a(href='/users/login')
                button(type='button') Login 
        each message in all_messages
            div.message-card 
                if member || admin
                    p #{message.user.username}
                p #{message.title}
                p #{message.timestamp}
                p #{message.message_text}
